{
  "name": "blend",
  "version": "2.0.0",
  "main": "dist/server/index.js",
  "bin": "dist/server/index.js",
  "repository": "https://github.com/bunchtogether/blend2.git",
  "author": "johnwehr@bunchtogether.com",
  "scripts": {
    "build": "rimraf ./dist && mkdirp ./dist && flow-remove-types ./src/server --out-dir ./dist/server && ncp ./src/static ./dist/static && ncp ./src/sample.mp4 ./dist/sample.mp4 && rimraf ./dist/static/player/logger.js && webpack --config ./webpack.config.js",
    "flow-typed": "./node_modules/.bin/flow-typed install --overwrite",
    "test": "yarn lint && yarn build && yarn test:js",
    "test:js": "cross-env NODE_ENV=test jest --runInBand tests",
    "lint": "npm run lint:js && npm run lint:flow",
    "lint:js": "eslint -c ./.eslintrc --no-eslintrc --fix .",
    "lint:flow": "flow --show-all-errors",
    "coverage": "codecov",
    "package-osx": "cd ./package/osx/; chmod +x ./build.sh; ./build.sh",
    "package-ubuntu": "cd ./package/ubuntu/; chmod +x ./build.sh; ./build.sh",
    "package-windows": "yarn build && .\\package\\windows\\build.cmd",
    "start": "yarn build && node dist/server/index.js",
    "chaos": "./tests/stream/simulate.sh"
  },
  "pre-commit": [
    "lint",
    "start-pre-commit",
    "build",
    "end-pre-commit"
  ],
  "jest": {
    "coverageDirectory": "./coverage/",
    "collectCoverage": true,
    "collectCoverageFrom": [
      "src/*.js"
    ],
    "transform": {
      "^.+\\.js(?:\\.flow)?$": "jest-flow-transform"
    }
  },
  "pkg": {
    "scripts": "dist/**/*.js",
    "assets": [
      "dist/static/**/*"
    ]
  },
  "devDependencies": {
    "@babel/core": "^7.3.4",
    "@babel/preset-env": "^7.3.4",
    "babel-eslint": "^9.0.0",
    "babel-loader": "^8.0.5",
    "babel-plugin-transform-flow-strip-types": "^6.22.0",
    "babel-preset-env": "^1.7.0",
    "babel-preset-es2015-rollup": "^3.0.0",
    "codecov": "^3.2.0",
    "cross-env": "^5.2.0",
    "eslint": "^5.15.0",
    "eslint-config-bunchtogether": "^1.1.6",
    "eslint-plugin-flowtype": "^3.4.2",
    "eslint-plugin-flowtype-errors": "^4.0.0",
    "eslint-plugin-import": "^2.16.0",
    "eslint-plugin-jest": "^22.3.0",
    "eslint-plugin-jsx-a11y": "^6.2.1",
    "eslint-plugin-react": "^7.12.4",
    "expect": "^24.1.0",
    "expose-loader": "^0.7.5",
    "flow-bin": "^0.94.0",
    "flow-remove-types": "^1.2.3",
    "flow-typed": "^2.5.1",
    "jest": "^24.1.0",
    "jest-flow-transform": "^1.0.1",
    "ncp": "^2.0.0",
    "pkg": "^4.3.7",
    "static-server": "^2.2.1",
    "webpack": "^4.29.6",
    "webpack-cli": "^3.2.3"
  },
  "dependencies": {
    "@bunchtogether/exit-handler": "^1.0.0",
    "@bunchtogether/ffmpeg-static": "^1.1.0",
    "@bunchtogether/hash-object": "^1.0.2",
    "body-parser": "^1.18.3",
    "chokidar": "^2.1.2",
    "colors": "^1.3.3",
    "express": "^4.16.4",
    "express-graceful-exit": "^0.4.2",
    "express-ws": "^4.0.0",
    "flatted": "^2.0.0",
    "fs-extra": "^7.0.1",
    "isomorphic-ws": "^4.0.1",
    "logform": "^2.1.2",
    "mime-types": "^2.1.22",
    "moment": "^2.24.0",
    "ps-node": "^0.1.6",
    "superagent": "^4.1.0",
    "winston": "^3.2.1"
  }
}
